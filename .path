# /usr/local/bin を最優先に
export PATH=/usr/local/bin:$PATH

# GVM
if [ -f "$HOME/.gvm/bin/gvm-init.sh" ] ; then
    . "$HOME/.gvm/bin/gvm-init.sh"
fi

# rbenv
if _type rbenv; then
    eval "$(rbenv init -)"
fi

# pyenv
if _type pyenv; then
    eval "$(pyenv init -)"
fi

# jenv
if _type jenv ; then
    eval "$(jenv init -)"
    export JENV_ROOT="/usr/local/opt/jenv"
fi

# docker
if _type boot2docker ; then
    export DOCKER_CERT_PATH="$HOME/.boot2docker/certs/boot2docker-vm"
    export DOCKER_TLS_VERIFY=1
    export DOCKER_HOST=tcp://$(_dockerip):2376
fi
