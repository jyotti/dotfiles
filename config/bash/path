if [ -d $(brew --prefix)/opt/coreutils/libexec/gnubin ]; then
  PATH="$(brew --prefix)/opt/coreutils/libexec/gnubin:$PATH"
  MANPATH="$(brew --prefix)/opt/coreutils/libexec/gnuman:$MANPATH"
fi

if [ -d $(brew --prefix)/opt/gnu-tar/libexec/gnubin ]; then
  PATH="$(brew --prefix)/opt/gnu-tar/libexec/gnubin:$PATH"
  export MANPATH="$(brew --prefix)/opt/gnu-tar/libexec/gnuman:$MANPATH"
fi

if [ -d $(brew --prefix)/opt/findutils/libexec/gnubin ]; then
  PATH="$(brew --prefix)/opt/findutils/libexec/gnubin:$PATH"
  export MANPATH="$(brew --prefix)/opt/findutils/libexec/gnuman:$MANPATH"
fi

if [ -d $(brew --prefix)/opt/make/libexec/gnubin ]; then
  PATH="$(brew --prefix)/opt/make/libexec/gnubin:$PATH"
  export MANPATH="$(brew --prefix)/opt/make/libexec/gnuman:$MANPATH"
fi
