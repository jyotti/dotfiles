#!/usr/bin/env bash

# openssl
if [ -d /usr/local/opt/openssl ]; then
  export PATH="/usr/local/opt/openssl/bin:$PATH"
  export LDFLAGS="-L/usr/local/opt/openssl/lib $LDFLAGS"
  export CPPFLAGS="-I/usr/local/opt/openssl/include $CPPFLAGS"
  export PKG_CONFIG_PATH="/usr/local/opt/openssl/lib/pkgconfig:$PKG_CONFIG_PATH"
fi

# coreutils
if [ -d /usr/local/opt/coreutils ]; then
  export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
  export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
fi

# gnu-tar
if [ -d /usr/local/opt/gnu-tar ]; then
  export PATH="/usr/local/opt/gnu-tar/libexec/gnubin:$PATH"
  export MANPATH="/usr/local/opt/gnu-tar/libexec/gnuman:$MANPATH"
fi

# findutils
if [ -d /usr/local/opt/findutils ]; then
  export PATH="/usr/local/opt/findutils/libexec/gnubin:$PATH"
  export MANPATH="/usr/local/opt/findutils/libexec/gnuman:$MANPATH"
fi

# make
if [ -d /usr/local/opt/make ]; then
  export PATH="/usr/local/opt/make/libexec/gnubin:$PATH"
  export MANPATH="/usr/local/opt/make/libexec/gnuman:$MANPATH"
fi

# unzip
if [ -d /usr/local/opt/unzip ]; then
  export PATH="/usr/local/opt/unzip/bin:$PATH"
fi

# curl
if [ -d /usr/local/opt/curl ]; then
  export PATH="/usr/local/opt/curl/bin:$PATH"
fi

# Ruby
if [ -d /usr/local/opt/ruby ]; then
  export PATH="/usr/local/opt/ruby/bin:$PATH"
  export LDFLAGS="-L/usr/local/opt/ruby/lib $LDFLAGS"
  export CPPFLAGS="-I/usr/local/opt/ruby/include $CPPFLAGS"
fi
